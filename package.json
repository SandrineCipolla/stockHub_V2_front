{
  "name": "stockhub-v2-front",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "vite",
    "generate-sitemap": "tsx scripts/generate-sitemap.ts",
    "build": "tsc -b && vite build",
    "build:with-sitemap": "npm run generate-sitemap && tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "audit:fps": "node scripts/test-performance-fps.mjs",
    "audit:a11y": "node scripts/test-reduced-motion.mjs",
    "audit:datasets": "node scripts/test-animations-datasets.mjs",
    "audit:daltonisme": "node scripts/test-daltonisme.mjs",
    "audit:risk-levels": "node scripts/test-risk-levels-colors.mjs",
    "audit:full": "node scripts/audit-complet.mjs",
    "clean:deadcode": "knip",
    "clean:fix": "knip --fix",
    "clean:check": "npm run type-check && npm run lint && npm run clean:deadcode",
    "pre-commit": "npm run clean:check",
    "detect:as-const": "node scripts/detect-as-const.mjs",
    "check:strict": "npm run detect:as-const && npm run lint",
    "ci:quality": "npm run type-check && npm run lint && npm run clean:deadcode && npm run detect:as-const",
    "ci:test": "npm run test:run",
    "ci:build": "npm run build",
    "ci:check": "npm run ci:quality && npm run ci:test && npm run ci:build",
    "ci:fix": "npm run lint:fix && npm run clean:fix && npm run ci:check",
    "ci:fast": "npm run type-check && npm run lint && npm run test:run",
    "ci:full": "npm run ci:check && npm run audit:full",
    "debug:ci": "node scripts/debug-ci.mjs",
    "typecheck": "npm run type-check"
  },
  "dependencies": {
    "@stockhub/design-system": "github:SandrineCipolla/stockhub_design_system#v1.3.1",
    "framer-motion": "^12.23.24",
    "lit": "^3.3.1",
    "lucide-react": "^0.517.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.9.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "knip": "^5.66.2",
    "lint-staged": "^16.2.6",
    "postcss": "^8.4.38",
    "prettier": "^3.6.2",
    "puppeteer": "^24.24.0",
    "tailwindcss": "^3.4.1",
    "terser": "^5.44.0",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
